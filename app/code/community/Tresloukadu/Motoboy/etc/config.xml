<config>
    <modules>
        <Tresloukadu_Motoboy>
            <version>0.0.2</version>
        </Tresloukadu_Motoboy>
    </modules>
    
    <global>
    	<models>
            <tresloukadu_motoboy>
                <class>Tresloukadu_Motoboy_Model</class>
            </tresloukadu_motoboy>
    	</models>
        <resources>
            <tresloukadu_motoboy_setup>
                <setup>
                    <module>Tresloukadu_Motoboy</module>
                </setup>
                <connection>
                    <use>directory_setup</use>
                </connection>
            </tresloukadu_motoboy_setup>
        </resources>
        <helpers>
            <tresloukadu_motoboy>
                <class>Tresloukadu_Motoboy_Helper</class>
            </tresloukadu_motoboy>
        </helpers>
        <sales>
            <shipping>
                <carriers>
                    <tresloukadu_motoboy>
                        <class>Tresloukadu_Motoboy_Model_Carrier_MotoboyMethod</class>
                    </tresloukadu_motoboy>
                </carriers>
            </shipping>
        </sales>
    </global>

    <default>
        <carriers>
            <tresloukadu_motoboy>
                <!-- GENERAL -->
                <active>1</active>
                <model>Tresloukadu_Motoboy_Model_Carrier_MotoboyMethod</model>
                <title>Motoboy</title>
            </tresloukadu_motoboy>
        </carriers>
    </default>
</config>